<style>
  .form {
    width: 600px;
    margin: 0 auto;
  }
  .form h2 {
    text-align: center;
    font-weight: normal;
  }
  .form .button {
    margin: 20px auto 0;
    display: block;
    width: 200px;
    background-color: skyblue;
    line-height: 44px;
    text-align: center;
    font-size: 22px;
    border-radius: 6px;
    appearance: none;
    border: none;
    color: white;
  }
  .form input[type="text"], 
  .form input[type="password"] {
    width: 100%;
    border-radius: 4px;
    line-height: 32px;
    border: 1px solid #ccc;
    padding: 0 15px;
  }
</style>

<div class="form">
<h2>ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <P>ニックネーム</P>
    <%= f.text_field :nickname, placeholder: "半角英数字 例) taroutanaka" %>
  </div>

  <div>
    <P>メールアドレス</P>
    <%= f.text_field :email  %>
  </div>
  <div>
    <p>パスワード</p>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  
  <div>
    <%= f.submit "Log in", class: "button" %>
  </div>
<% end %>
<%= render "users/shared/links" %>
</div>
