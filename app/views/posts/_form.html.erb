<style>
  .form {
    width: 600px;
    margin: 0 auto;
  }
  .form h1 {
    text-align: center;
    font-weight: normal;
  }
  .form .button {
    margin: 20px auto 0;
    display: block;
    width: 200px;
    background-color: skyblue;
    line-height: 44px;
    text-align: center;
    font-size: 22px;
    border-radius: 6px;
    appearance: none;
    border: none;
    color: #fff;
  }
  .form input[type="text"],
  .form input[type="title"]
   {
    width: 50%;
    border-radius: 4px;
    line-height: 32px;
    border: 1px solid #ccc;
    padding: 0 15px;
  }

   #post_body {
    width: 50%;
    height: 100px;
    border-radius: 4px;
    line-height: 32px;
    border: 1px solid #ccc;
    padding: 0 15px;


   }
</style>

<div class="form">
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, id: :post_body %>
  </div>

  <div>
  <%= form.label :image %>
  <%= form.file_field :image %> 
  </div>

  <div style = "display: none;" >
    <%= form.label :timeline %>
    <%= form.datetime_select :timeline, id: :post_timeline %>
  </div>

  <div>
    <%= form.submit '投稿する', class: "button" %>
  </div>

<% end %>
</div>